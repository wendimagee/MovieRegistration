
<form asp-controller="Home" asp-action="Result" method="post">
    <p>Movie Registration Form</p>

    <p>Movie Title</p>
    <input type="text" name="title" required/>

    <p>Movie Genre</p>
    <fieldset>
        <p>
            <label>Genre</label>
            <select id="genreList">
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Horror">Horror</option>
                <option value="Action">Action</option>
                <option value="Romance">Romance</option>
                <option value="Romance">Romance</option>
            </select>
        </p>
    </fieldset>

    <p>Movie Year</p>
    <input type="date" name="year" min="1880-01-01" max="` + today + `" required/>

    <p>Actors</p>
    <input type="text" name="Actors[]" required />
    <input type="text" name="Actors[]" />
    <input type="text" name="Actors[]" />
    <input type="text" name="Actors[]" />

    <p>Directors</p>
    <input type="text" name="Directors[]" required />
    <input type="text" name="Directors[]" />
    <input type="text" name="Directors[]" />

    <input type="submit" method="post" />
</form>
