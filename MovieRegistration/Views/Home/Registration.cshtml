
<form asp-controller="Home" asp-action="Result" method="post">
    <p>Movie Registration Form</p>

    <p>Movie Title</p>
    <input type="text" name="title" min="1" max="20" required />

    <p>Movie Genre</p>
    <fieldset>
        <p>
            <label>Genre</label>
            <select id="genreList">
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Horror">Horror</option>
                <option value="Action">Action</option>
                <option value="Romance">Romance</option>
                <option value="RomCom">RomCom</option>
            </select>
        </p>
    </fieldset>

    <p>Movie Year</p>
    <input type="number" min="1880" max="2021" value="2021" required/>
   

    <p>Actors</p>
    <input type="text" name="Actors[]" min="5" max="30" required />
    <input type="text" name="Actors[]" min="5" max="30" />
    <input type="text" name="Actors[]" min="5" max="30" />
    <input type="text" name="Actors[]" min="5" max="30" />

    <p>Directors</p>
    <input type="text" name="Directors[]" min="5" max="30" required />
    <input type="text" name="Directors[]" min="5" max="30" />
    <input type="text" name="Directors[]" min="5" max="30" />

    <input type="submit" method="post" />
</form>
